---
import "@fontsource-variable/raleway";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/x-icon" href="/portfolio/favicon.ico" />
    <link rel="icon" type="image/png" href="/portfolio/favicon-96x96.png?v=2" sizes="96x96" />
    <link rel="icon" type="image/svg+xml" href="/portfolio/favicon.svg" />
    <link rel="shortcut icon" href="/portfolio/favicon.ico" />
    <link rel="apple-touch-icon" sizes="180x180" href="/portfolio/apple-touch-icon.png" />
    <meta name="apple-mobile-web-app-title" content="Ikraam" />
    <link rel="manifest" href="/portfolio/site.webmanifest" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>
<style is:global>
  html {
    font-family: "Raleway Variable", sans-serif;
    background: #18181B;
    color: #fff;
  }
</style>
