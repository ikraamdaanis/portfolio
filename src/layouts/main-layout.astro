---
import { ClientRouter } from "astro:transitions";
import Footer from "components/footer.astro";
import Navbar from "components/navbar.astro";
import SEO from "components/seo.astro";
import Schema from "components/schema.astro";

interface Props {
  title?: string;
  description?: string;
  image?: string;
  type?: "website" | "article";
}

const {
  title = "ikraam | software engineer",
  description = "full-stack software engineer specializing in typescript, react.js, and next.js. building scalable, performant web applications",
  image = "/og-image.png",
  type = "website"
} = Astro.props;

const schema = {
  "@context": "https://schema.org",
  "@type": "Person",
  name: "ikraam",
  url: Astro.site,
  jobTitle: "Software Engineer",
  description
};
---

<html lang="en" class="bg-brand text-text-color antialiased">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="theme-color" content="hsl(0 0% 7%)" />
    <meta name="generator" content={Astro.generator} />
    <link rel="dns-prefetch" href="https://cal.com" />
    <link rel="dns-prefetch" href="https://github.com" />
    <link rel="dns-prefetch" href="https://x.com" />
    <link rel="dns-prefetch" href="https://linkedin.com" />
    <link rel="preconnect" href="https://formspree.io" crossorigin />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <link
      rel="icon"
      type="image/png"
      href="/favicon-96x96.png?v=2"
      sizes="96x96"
    />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="shortcut icon" href="/favicon.ico" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <link rel="manifest" href="/site.webmanifest" />
    <SEO title={title} description={description} image={image} type={type} />
    <Schema schema={schema} />
  </head>
  <body class="flex min-h-screen flex-col">
    <Navbar />
    <main class="flex-1 pt-[60px]">
      <slot />
    </main>
    <Footer />
    <ClientRouter />
  </body>
</html>

<script is:inline>
  document.documentElement.style.visibility = "hidden";
</script>

<script>
  document.addEventListener("astro:page-load", () => {
    requestAnimationFrame(() => {
      document.documentElement.style.visibility = "visible";
    });
  });
</script>
