---
import { ClientRouter } from "astro:transitions";
import Footer from "components/footer.astro";
import Navbar from "components/navbar.astro";

type Props = {
  title: string;
  description?: string;
};

const {
  title,
  description = "Full-stack software engineer specializing in TypeScript, React.js, and Next.js. Building scalable, performant web applications."
} = Astro.props;
---

<!doctype html>
<html lang="en" class="antialiased bg-brand text-text-color">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="theme-color" content="hsl(0 0% 7%)" />
    <link rel="dns-prefetch" href="https://cal.com" />
    <link rel="dns-prefetch" href="https://github.com" />
    <link rel="dns-prefetch" href="https://x.com" />
    <link rel="dns-prefetch" href="https://linkedin.com" />
    <link rel="preconnect" href="https://formspree.io" crossorigin />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <link
      rel="icon"
      type="image/png"
      href="/favicon-96x96.png?v=2"
      sizes="96x96"
    />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="shortcut icon" href="/favicon.ico" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <meta name="apple-mobile-web-app-title" content="Ikraam" />
    <link rel="manifest" href="/site.webmanifest" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="flex flex-col min-h-screen">
    <Navbar />
    <main class="pt-[60px] flex-1">
      <slot />
    </main>
    <Footer />
    <ClientRouter />
  </body>
</html>

<script is:inline>
  document.documentElement.style.visibility = "hidden";
</script>

<script>
  document.addEventListener("astro:page-load", () => {
    requestAnimationFrame(() => {
      document.documentElement.style.visibility = "visible";
    });
  });
</script>
