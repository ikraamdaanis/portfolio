---
interface Props {
  title?: string;
  description?: string;
  image?: string;
  type?: "website" | "article";
  canonical?: string;
}

const {
  title = "ikraam | software engineer",
  description = "full-stack software engineer specializing in typescript, react.js, and next.js. building scalable, performant web applications",
  image = "/og-image.png",
  type = "website",
  canonical = new URL(Astro.url.pathname, Astro.site)
} = Astro.props;

const canonicalURL = canonical || new URL(Astro.url.pathname, Astro.site);
const ogImage = new URL(image, Astro.site);
---

<!-- Canonical -->
<link rel="canonical" href={canonicalURL} />

<!-- Primary Meta Tags -->
<title>{title}</title>
<meta name="title" content={title} />
<meta name="description" content={description} />

<!-- Open Graph / Facebook -->
<meta property="og:type" content={type} />
<meta property="og:url" content={canonicalURL} />
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta property="og:image" content={ogImage} />

<!-- Twitter -->
<meta property="twitter:card" content="summary_large_image" />
<meta property="twitter:url" content={canonicalURL} />
<meta property="twitter:title" content={title} />
<meta property="twitter:description" content={description} />
<meta property="twitter:image" content={ogImage} />
