---
const currentPath = Astro.url.pathname;
const isHome = currentPath === "/portfolio" || currentPath === "/portfolio/";
const isAbout = currentPath.includes("/about");
const isContact = currentPath.includes("/contact");
---

<nav
  class="fixed left-0 right-0 top-0 z-50 backdrop-blur-xs bg-brand/80 border-b border-transparent"
  transition:name="navbar"
  transition:animate="none"
>
  <div class="mx-auto max-w-2xl p-4">
    <div class="flex items-center justify-between">
      <a href="/portfolio" class="text-xl tracking-tight"> ikraam </a>
      <div class="flex items-center gap-6 text-sm">
        <a
          href="/portfolio"
          class:list={["relative transition-opacity hover:opacity-80"]}
        >
          home
        </a>
        <a
          href="/portfolio/about"
          class:list={["relative transition-opacity hover:opacity-80"]}
        >
          about
        </a>
        <a
          href="/portfolio/contact"
          class:list={["relative transition-opacity hover:opacity-80"]}
        >
          contact
        </a>
      </div>
    </div>
  </div>
</nav>
