---
const currentPage = Astro.url.pathname;
---

<nav
  class="bg-brand/80 fixed top-0 right-0 left-0 z-50 border-b border-transparent backdrop-blur-xs"
  transition:name="navbar"
  transition:animate="none"
>
  <div class="mx-auto max-w-2xl p-4">
    <div class="flex items-center justify-between">
      <a href="/" class="text-xl tracking-tight" data-astro-prefetch>
        ikraam
      </a>
      <div class="flex items-center gap-6 text-sm">
        <a
          href="/"
          data-astro-prefetch
          class:list={[
            "relative opacity-60 transition-opacity select-none hover:opacity-100 hover:brightness-110",
            currentPage === "/" && "opacity-100"
          ]}
        >
          home
        </a>
        <a
          href="/about"
          data-astro-prefetch
          class:list={[
            "relative opacity-60 transition-opacity select-none hover:opacity-100 hover:brightness-110",
            currentPage.includes("/about") && "opacity-100"
          ]}
        >
          about
        </a>
        <a
          href="/contact"
          data-astro-prefetch
          class:list={[
            "relative opacity-60 transition-opacity select-none hover:opacity-100 hover:brightness-110",
            currentPage.includes("/contact") && "opacity-100"
          ]}
        >
          contact
        </a>
      </div>
    </div>
  </div>
</nav>
